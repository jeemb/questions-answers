{{#if addNewQuestion}}
  <form class="new-question">
    <h3>Add New Question</h3>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="content">Content</label>
      {{input value=content id="content" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="addtl">Addt'l Notes</label>
      {{input value=addtl id="addtl" class="form-control"}}
    </div>

    <button {{action 'saveNewQuestion'}} class="btn btn-info">Add</button>
  </form>
  {{else}}
  <button {{action 'showAddQuestionForm'}} class = "btn btn-warning">New Question</button>
  {{/if}}
